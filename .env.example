# ============================================================
# FORUM HUB API - VARIÁVEIS DE AMBIENTE
# ============================================================
# 
# Copie este arquivo para .env e configure com seus valores reais
# NUNCA commitar o arquivo .env no repositório
#
# cp .env.example .env
#
# ============================================================

# ============================================================
# SERVIDOR
# ============================================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# ============================================================
# BANCO DE DADOS MySQL
# ============================================================
# URL de conexão com o banco (sem credenciais)
DATABASE_URL=jdbc:mysql://localhost:3306/forum?useSSL=false&serverTimezone=America/Sao_Paulo&allowPublicKeyRetrieval=true

# Driver JDBC do MySQL
DATABASE_DRIVER=com.mysql.cj.jdbc.Driver

# Credenciais do banco de dados
# ⚠️ MUDAR EM PRODUÇÃO
DATABASE_USERNAME=root
DATABASE_PASSWORD=gpm123

# ============================================================
# JPA / HIBERNATE
# ============================================================
# Dialect do Hibernate para MySQL 8.0
JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect

# Estratégia de criação de tabelas
# validate    = Apenas valida (recomendado em produção)
# create      = Cria tabelas (apenas desenvolvimento)
# create-drop = Cria e deleta ao encerrar (testes)
JPA_DDL_AUTO=validate

# Mostrar SQL gerado
JPA_SHOW_SQL=false

# Formatar SQL em log
JPA_FORMAT_SQL=true

# Incluir comentários SQL em log
JPA_USE_SQL_COMMENTS=true

# ============================================================
# FLYWAY (Migrações de Banco)
# ============================================================
FLYWAY_ENABLED=true
FLYWAY_BASELINE=true
FLYWAY_LOCATIONS=classpath:db/migration
FLYWAY_BASELINE_VERSION=0

# ============================================================
# LOGGING
# ============================================================
# Níveis: OFF, FATAL, ERROR, WARN, INFO, DEBUG, TRACE

# Log root (aplicação geral)
LOG_LEVEL_ROOT=INFO

# Log da aplicação (br.com.alura.forum)
LOG_LEVEL_APP=DEBUG

# Log do Spring Web
LOG_LEVEL_WEB=DEBUG

# Log do Hibernate SQL
LOG_LEVEL_SQL=DEBUG

# Log dos parâmetros do SQL
LOG_LEVEL_BINDER=TRACE

# ============================================================
# SEGURANÇA - JWT (JSON Web Token)
# ============================================================

# Secret key para assinar tokens JWT
# ⚠️ CRÍTICO: Use uma chave forte em produção
# Recomendação: Mínimo 256 bits (32 caracteres)
# Ferramenta para gerar: https://www.uuidgenerator.net/
JWT_SECRET=sua-chave-secreta-super-segura-mudar-em-producao-minimo-256bits

# Emissor do token (identificação da aplicação)
JWT_ISSUER=Forum Hub

# Tempo de expiração do token em horas
JWT_EXPIRATION_HOURS=24

# ============================================================
# AMBIENTE
# ============================================================
# Valores: development, staging, production
ENVIRONMENT=development

# ============================================================
# APLICAÇÃO
# ============================================================
# Nome da aplicação
APP_NAME=Forum Hub API

# Versão da aplicação
APP_VERSION=1.0.0
